# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CS_BOT_TOKEN=your_cs_bot_token_here
BOT_DEBUG=false
LOG_LEVEL=info
# Worker pool settings (update processing concurrency)
MAX_UPDATE_WORKERS=16
# Maximum buffered updates before backpressure
MAX_UPDATE_QUEUE=256

# Dashboard Settings
DASHBOARD_PORT=3001
DASHBOARD_API_URL=http://localhost:8080

# Email Configuration (Brevo API for OTP verification)
BREVO_API_KEY=your_brevo_api_key_here
SMTP_USERNAME=verified_sender@yourdomain.com
SMTP_FROM=PNJ Anonymous Bot <verified_sender@yourdomain.com>
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_PASSWORD=optional_not_used_for_brevo

# Database Utama
# Pilihan: postgres (recommended) / sqlite
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=pnjbot
DB_PASSWORD=change_this_to_a_strong_password
DB_NAME=pnj_anonymous
DB_PATH=./data/pnj_anonymous.db # Only used when DB_TYPE=sqlite

# Redis (Caching & Queue)
REDIS_URL=redis:6379

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# Monitoring
GRAFANA_PASSWORD=admin
GRAFANA_PORT=3002

# Rate Limiting
MAX_SEARCH_PER_MINUTE=5
MAX_CONFESSIONS_PER_HOUR=3
MAX_REPORTS_PER_DAY=5
MAX_WHISPERS_PER_HOUR=5
MAX_REPLIES_PER_HOUR=10

# Auto-ban threshold
AUTO_BAN_REPORT_COUNT=3

# Maintenance/Admin Account (Numeric Telegram ID)
MAINTENANCE_ID=0

# AI Image Moderation (Sightengine)
SIGHTENGINE_API_USER=your_sightengine_api_user
SIGHTENGINE_API_SECRET=your_sightengine_api_secret

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENV=production
