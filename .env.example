# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CS_BOT_TOKEN=your_cs_bot_token_here
BOT_DEBUG=false
LOG_LEVEL=info
# Worker pool settings (update processing concurrency)
MAX_UPDATE_WORKERS=16
# Maximum buffered updates before backpressure
MAX_UPDATE_QUEUE=256

# SMTP Email Configuration (for OTP verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=PNJ Anonymous Bot <your_email@gmail.com>

# Database
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USER=pnjbot
DB_PASSWORD=change_this_to_a_strong_password
DB_NAME=pnj_anonymous
DB_PATH=./data/pnj_anonymous.db # Only for sqlite (Local Dev)

# Redis (Caching & Queue)
REDIS_URL=redis:6379

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# Rate Limiting
MAX_SEARCH_PER_MINUTE=5
MAX_CONFESSIONS_PER_HOUR=3
MAX_REPORTS_PER_DAY=5

# Auto-ban threshold
AUTO_BAN_REPORT_COUNT=3

# Maintenance/Dummy Account (ID Telegram)
MAINTENANCE_ID=your_telegram_id_here
